<script>
const createAuthorityBtn = document.getElementById('createAuthorityBtn');
const authorityFormPopup = document.getElementById('authorityFormPopup');
const authorityForm = document.getElementById('authorityForm');
const closeAuthorityForm = document.getElementById('closeAuthorityForm');

createAuthorityBtn.addEventListener('click', () => {
authorityFormPopup.classList.remove('hidden');
});

closeAuthorityForm.addEventListener('click', () => {
authorityFormPopup.classList.add('hidden');
});

authorityForm.addEventListener('submit', (e) => {
e.preventDefault();
const formData = new FormData(authorityForm);

// Create a new table row with the form data
const newRow = createTableRow(formData);

// Add the new row to the table
const tableBody = document.querySelector('table tbody');
tableBody.appendChild(newRow);

// Close the popup and reset the form
authorityFormPopup.classList.add('hidden');
authorityForm.reset();
});

function createTableRow(formData) {
const row = document.createElement('tr');
row.className = 'hover:bg-gray-50 transition-colors duration-200';

const cellData = [
formData.get('schoolName'),
formData.get('location'),
formData.get('students'),
formData.get('phoneNumber'),
formData.get('email'),
'<img class="h-8 w-8 object-contain" src="' + URL.createObjectURL(formData.get('logo')) + '" alt="School Logo">',
'<button class="bg-blue-500 hover:bg-blue-600 text-white text-xs font-bold py-1 px-2 rounded mr-1 transition-colors duration-200">Edit</button>' + '<button class="bg-red-500 hover:bg-red-600 text-white text-xs font-bold py-1 px-2 rounded transition-colors duration-200">Delete</button>'
];

cellData.forEach(data => {
const cell = document.createElement('td');
cell.className = 'py-3 px-4 border-b text-sm';
cell.innerHTML = data;
row.appendChild(cell);
});

return row;
}</script>{% endblock %}{% block scripts %}{% endblock %}
