				<label for="schoolPhone" class="block text-sm font-medium text-gray-700">Phone Number</label>
				<input type="tel" id="schoolPhone" name="schoolPhone" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
