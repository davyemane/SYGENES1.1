{% extends "base_super_admin.html.twig" %}

{% block title %}
	<title>UIECC Dashboard -
		{{ level.name }}</title>
{% endblock %}

{% block body %}
    <div class="min-h-screen bg-white p-8 flex flex-col overflow-hidden">
        <header class="text-gray-900 p-5 rounded-lg mb-6 flex flex-col items-center justify-center container mx-auto text-center border-b-4 border-gray-900">
            <h1 class="text-4xl font-bold mb-1">Welcome to {{ level.name }} Dashboard</h1>
            <p class="text-md opacity-80">Today is {{ "now"|date("l, F j, Y") }}</p>
        </header>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 dark:bg-{{ label == 'success' ? 'green' : 'red' }}-900 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 dark:text-{{ label == 'success' ? 'green' : 'red' }}-100 p-4 mb-6 rounded-md shadow-sm transition-all duration-300 ease-in-out hover:shadow-md" role="alert">
                    <p class="font-bold">{{ (label == 'success' ? 'flash.success' : 'flash.error')|trans }}</p>
                    <p>{{ message|trans }}</p>
                </div>
            {% endfor %}
        {% endfor %}

		<!-- Statistics Section -->
		<div class="mb-6">
			<div class="bg-white rounded-lg shadow-md p-6">
				<h2 class="text-2xl font-semibold text-gray-800 mb-4">Level Statistics</h2>
				<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
					{% set stats = [
                {label: 'Students', count: studentCount, color: 'blue', icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z'},
                {label: 'UEs', count: ueCount, color: 'green', icon: 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10'},
                {label: 'ECs', count: ecCount, color: 'yellow', icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253'},
                {label: 'Responsibles', count: uesData|filter(ueData => ueData.respUE)|length, color: 'gray', icon: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z'}
            ] %}
            {% for stat in stats %}
                <div class="bg-{{ stat.color }}-100 rounded-lg p-4 flex items-center justify-between">
                    <div>
                        <p class="text-{{ stat.color }}-800 text-sm font-medium">{{ stat.label }}</p>
                        <p class="text-{{ stat.color }}-600 text-2xl font-bold">{{ stat.count }}</p>
                    </div>
                    <div class="text-{{ stat.color }}-500">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
        <!-- Main Content Area -->
        <div class="flex flex-row  gap-6 flex-grow overflow-hidden h-[calc(90vh-24rem)]">
            <!-- Left Section: Quick Actions -->
            <div class="w-full h-4/5  lg:w-1/4 bg-white rounded-lg p-4 flex flex-col shadow-xl overflow-y-auto">
                <h2 class="text-2xl font-semibold text-gray-800 mb-2">Quick Actions</h2>
                <p class="mb-8 text-sm text-gray-600">Perform quick actions for this level</p>
                <div class="space-y-4 flex-grow ">
                    <form action="{{ path('add_ue') }}" method="GET">
                        <input type="hidden" name="level_id" value="{{ level.id }}">
                        <button class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-5 rounded-lg transition duration-300 ease-in-out transform hover:scale-105">
                            Create UE
                        </button>
                    </form>
                    <form action="{{ path('register_respue') }}" method="GET">
                        <input type="hidden" name="level_id" value="{{ level.id }}">
                        <button class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-5  rounded-lg transition duration-300 ease-in-out transform hover:scale-105">
                            Create UE Responsible
                        </button>
                    </form>
                    <form action="#" method="GET">
                        <input type="hidden" name="level_id" value="{{ level.id }}">
                        <button class="w-full bg-purple-500 hover:bg-purple-600 text-white font-semibold py-3 px-5  rounded-lg transition duration-300 ease-in-out transform hover:scale-105">
                            Generer Level PV
                        </button>
                    </form>
                    <form action="{{ path('list_student_notes') }}" method="GET">
                        <input type="hidden" name="level_id" value="{{ level.id }}">
                        <button class="w-full bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-5  rounded-lg transition duration-300 ease-in-out transform hover:scale-105">
                            Generer Releve de Notes
                        </button>
                    </form>
                </div>
            </div>

			<!-- Middle Section: UE List -->
			<div class="w-full h-4/5  lg:w-1/3 bg-white rounded-lg p-6 flex flex-col shadow-xl overflow-hidden">
				<h2 class="text-2xl font-semibold text-gray-800 mb-2">UE List</h2>
				<p class="mb-4 text-xs">Below is the list of UEs for
					{{ level.name }}</p>
				<div class="overflow-y-auto flex-grow">
					<table class="min-w-full bg-white">
						<thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal sticky top-0">
							<tr>
								<th class="py-3 px-6 text-left">Name</th>
								<th class="py-3 px-6 text-left">Code</th>
								<th class="py-3 px-6 text-center">Actions</th>
							</tr>
						</thead>
						<tbody class="text-gray-600 text-sm font-light">
							{% for ueData in uesData %}
								<tr class="border-b border-gray-200 hover:bg-gray-100">
									<td class="py-3 px-6 text-left whitespace-nowrap">{{ ueData.ue.name }}</td>
									<td class="py-3 px-6 text-left">{{ ueData.ue.codeUe }}</td>
									<td class="py-3 px-6 text-center">
										<a href="{{ path('delete_ue', {'id': ueData.ue.id}) }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded text-xs" onclick="return confirm('Are you sure you want to delete this UE?');">Delete</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="3" class="py-3 px-6 text-center">No UEs found for this level</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>

			<!-- Right Section: UE Responsible List -->
			<div class="w-full h-4/5 lg:w-5/12 bg-white rounded-lg p-6 flex flex-col shadow-xl overflow-hidden">
				<h2 class="text-2xl font-semibold text-gray-800 mb-2">UE Responsibles</h2>
				<p class="mb-4 text-xs">Below is the list of UE responsibles for
					{{ level.name }}</p>
				<div class="overflow-y-auto flex-grow">
					<table class="min-w-full bg-white">
						<thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal sticky top-0">
							<tr>
								<th class="py-3 px-6 text-left">Name</th>
								<th class="py-3 px-6 text-left">UE</th>
								<th class="py-3 px-6 text-left">Phone Number</th>
								<th class="py-3 px-6 text-left">Email</th>
								<th class="py-3 px-6 text-center">Actions</th>
							</tr>
						</thead>
						<tbody class="text-gray-600 text-sm font-light">
							{% for ueData in uesData %}
								{% if ueData.respUE %}
									<tr class="border-b border-gray-200 hover:bg-gray-100">
										<td class="py-3 px-6 text-left whitespace-nowrap">{{ ueData.respUE.name }}</td>
										<td class="py-3 px-6 text-left">{{ ueData.ue.name }}</td>
										<td class="py-3 px-6 text-left">{{ ueData.respUE.phoneNumber }}</td>
										<td class="py-3 px-6 text-left">{{ ueData.respUE.email }}</td>
										<td class="py-3 px-6 text-center">
											<a href="{{ path('delete_respue', {'id': ueData.respUE.id}) }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded text-xs" onclick="return confirm('Are you sure you want to delete this responsible?');">Delete</a>
										</td>
									</tr>
								{% endif %}
							{% else %}
								<tr>
									<td colspan="5" class="py-3 px-6 text-center">No UE responsibles found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
