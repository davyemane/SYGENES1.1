{% extends "base_super_admin.html.twig" %}

{% block title %}
<title>UIECC Dashboard</title>
{% endblock %}

{% block body %}
<div class="min-h-screen bg-white p-8 flex flex-col overflow-hidden">
    <header class="bg-white text-dark-gray p-8 rounded-lg shadow-2xl mb-8 flex flex-col items-center justify-center container mx-auto text-center border-b-4 border-indigo-500">
        {% if fields is defined and fields|length > 0 and fields[0].school is defined %}
            <h1 class="text-5xl font-bold mb-4 text-indigo-700">Welcome to {{ fields[0].school.name }} Dashboard</h1>
        {% else %}
            <h1 class="text-5xl font-bold mb-4 text-indigo-700">Welcome to UIECC Dashboard</h1>
        {% endif %}
        <p class="text-xl opacity-80 text-gray-600">Today is {{ "now"|date("l, F j, Y") }}</p>
    </header>
    <div class="flex gap-6 mb-6 flex-grow overflow-hidden">
        <!-- Left Section: Create a field -->
        <div class="w-1/4 bg-white rounded-lg shadow-lg p-6 h-[calc(50vh-4rem)] flex flex-col justify-center">
            <div class="text-center mb-6 mt-10">
                <div class="group relative">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-2">Create a Field</h2>
                    <div class="absolute z-10 invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-white text-gray-800 border border-gray-300 rounded-sm shadow-lg p-2 w-48 mt-2 left-1/2 transform -translate-x-1/2">
                        <p>Easily add a new field to the university with just a click</p>
                    </div>
                </div>
                <p class="mb-6 text-sm text-gray-600">Click below to add a new field</p>
                <form action="{{ path('field_new') }}" method="GET">
                    <button class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-lg shadow mb-4 transition duration-300 ease-in-out transform hover:scale-105">
                        <svg class="h-6 w-6 inline-block mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Create Field
                    </button>
                </form>
            </div>
        </div>

        <!-- Right Section: Field List -->
        <div class="flex-1 bg-white rounded-lg shadow-xl p-6 overflow-hidden flex flex-col h-[calc(50vh-4rem)]">
            <div>
                <h2 class="text-2xl font-semibold text-gray-800">Field List</h2>
                <p class="mb-4 text-xs">Below is the list of fields you've created so far</p>
            </div>

            <div class="overflow-y-auto flex-grow">
                <table class="min-w-full bg-white">
                    <thead>
                        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                            <th class="py-3 px-6 text-left">Name</th>
                            <th class="py-3 px-6 text-left">Description</th>
                            <th class="py-3 px-6 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-600 text-sm font-light">
                        {% for field in fields %}
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left whitespace-nowrap">{{ field.name }}</td>
                            <td class="py-3 px-6 text-left">{{ field.description }}</td>
                            <td class="py-3 px-6 text-center">
                                <a href="{{ path('delete_field', {'id': field.id}) }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded text-xs" onclick="return confirm('Are you sure you want to delete this field?');">Delete</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="3" class="py-3 px-6 text-center">No fields found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="flex gap-6 flex-grow overflow-hidden">
        <!-- Left Section: Create a field responsible -->
        <div class="w-1/4 bg-white rounded-lg shadow-lg p-6 h-[calc(50vh-4rem)] flex flex-col justify-center">
            <div class="text-center mb-6 mt-8">
                <div class="group relative">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-2">Create a Field Responsible</h2>
                    <div class="absolute z-10 invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-white text-gray-800 border border-gray-300 rounded-sm shadow-lg p-2 w-48 mt-2 left-1/2 transform -translate-x-1/2">
                        <p>Add a responsible to manage a specific field</p>
                    </div>
                </div>
                <p class="mb-6 text-sm text-gray-600">Click below to add a field responsible</p>
                <button id="createResponsibleBtn" class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-lg shadow mb-4 transition duration-300 ease-in-out transform hover:scale-105">
                    <svg class="h-6 w-6 inline-block mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create Field Responsible
                </button>
            </div>
        </div>

        <!-- Right Section: Field Responsible List -->
        <div class="flex-1 bg-white rounded-lg shadow-xl p-6 overflow-hidden flex flex-col h-[calc(50vh-4rem)]">
            <div>
                <h2 class="text-2xl font-semibold text-gray-800">Field Responsibles</h2>
                <p class="mb-4 text-xs">Below is the list of field responsibles</p>
            </div>

            <div class="overflow-y-auto flex-grow">
                <table class="min-w-full bg-white">
                    <thead>
                        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                            <th class="py-3 px-6 text-left">Name</th>
                            <th class="py-3 px-6 text-left">Field</th>
                            <th class="py-3 px-6 text-left">Phone Number</th>
                            <th class="py-3 px-6 text-left">Email</th>
                            <th class="py-3 px-6 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-600 text-sm font-light">
                        {% for resp_field in resp_fields %}
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left whitespace-nowrap">{{ resp_field.name }}</td>
                            <td class="py-3 px-6 text-left">{{ resp_field.field.name }}</td>
                            <td class="py-3 px-6 text-left">{{ resp_field.phoneNumber }}</td>
                            <td class="py-3 px-6 text-left">{{ resp_field.email }}</td>
                            <td class="py-3 px-6 text-center">
                                <a href="{{ path('delete_resp_field', {'id': resp_field.id}) }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded text-xs" onclick="return confirm('Are you sure you want to delete this responsible?');">Delete</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="py-3 px-6 text-center">No field responsibles found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Popup Form for add field responsible -->
<div id="responsibleFormPopup" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <div class="flex justify-between items-center">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Create Field Responsible</h3>
                <svg id="closeResponsibleForm" class="w-6 h-6 text-gray-500 cursor-pointer popup-close" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </div>
            <form id="responsibleForm" class="mt-2 text-left">
                <input type="text" name="name" placeholder="Name" class="mt-2 p-2 w-full border rounded" required>
                <select name="field" class="mt-2 p-2 w-full border rounded" required>
                    <option value="">Select Field</option>
                    {% for field in fields %}
                        <option value="{{ field.id }}">{{ field.name }}</option>
                    {% endfor %}
                </select>
                <input type="tel" name="phoneNumber" placeholder="Phone Number" class="mt-2 p-2 w-full border rounded" required>
                <input type="email" name="email" placeholder="Email" class="mt-2 p-2 w-full border rounded" required>
                <div class="items-center px-4 py-3">
                    <button id="submitResponsibleBtn" type="submit" class="px-4 py-2 bg-green-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    const createResponsibleBtn = document.getElementById('createResponsibleBtn');
    const responsibleFormPopup = document.getElementById('responsibleFormPopup');
    const responsibleForm = document.getElementById('responsibleForm');
    const closeResponsibleForm = document.getElementById('closeResponsibleForm');

    createResponsibleBtn.addEventListener('click', () => {
        responsibleFormPopup.classList.remove('hidden');
    });

    closeResponsibleForm.addEventListener('click', () => {
        responsibleFormPopup.classList.add('hidden');
    });

    responsibleForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const formData = new FormData(responsibleForm);

        // Here you would typically send the data to the server
        // For now, we'll just close the popup and reset the form
        responsibleFormPopup.classList.add('hidden');
        responsibleForm.reset();
    });
</script>
{% endblock %}