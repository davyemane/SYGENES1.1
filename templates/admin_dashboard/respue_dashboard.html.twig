{% extends "base_super_admin.html.twig" %}

{% block title %}
    <title>Teacher EC Dashboard</title>
{% endblock %}

{% block body %}
    <div class="min-h-screen bg-white p-8 flex flex-col overflow-hidden">
        <header class="text-gray-900 p-5 rounded-lg mb-6 flex flex-col items-center justify-center container mx-auto text-center border-b-4 border-gray-900">
            <h1 class="text-4xl font-bold mb-1">Welcome to {{ue.name}} Dashboard</h1>
            <p class="text-md opacity-80">Today is {{ "now"|date("l, F j, Y") }}</p>
        </header>

        <!-- Flash Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 p-4 mb-6 rounded-md shadow-sm transition-all duration-300 ease-in-out hover:shadow-md" role="alert">
                    <p class="font-bold">{{ label|capitalize }}</p>
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Statistics Section -->
        <div class="mb-6">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Dashboard Statistics</h2>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    {% set stats = [
                        {label: 'Teachers', count: teacherCount, color: 'blue', icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z'},
                        {label: 'ECs', count: ecCount, color: 'green', icon: 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10'},
                        {label: 'Avg ECs/Teacher', count: averageEcsPerTeacher, color: 'yellow', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01'}
                    ] %}
                    {% for stat in stats %}
                        <div class="bg-{{ stat.color }}-100 rounded-lg p-4 flex items-center justify-between">
                            <div>
                                <p class="text-{{ stat.color }}-800 text-sm font-medium">{{ stat.label }}</p>
                                <p class="text-{{ stat.color }}-600 text-2xl font-bold">{{ stat.count }}</p>
                            </div>
                            <div class="text-{{ stat.color }}-500">
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ stat.icon }}"></path>
                                </svg>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex flex-col lg:flex-row gap-6 flex-grow overflow-hidden h-[calc(90vh-24rem)]">
            <!-- Teacher List Section -->
            <div class="w-full lg:w-3/4 bg-white rounded-lg p-6 flex flex-col shadow-xl overflow-hidden">
                <h2 class="text-2xl font-semibold text-gray-800 mb-2">Teacher List</h2>
                <p class="mb-4 text-xs">Below is the list of teachers and their associated ECs</p>
                <div class="overflow-y-auto flex-grow">
                    <table class="min-w-full bg-white">
                        <thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal sticky top-0">
                            <tr>
                                <th class="py-3 px-6 text-left">Name</th>
                                <th class="py-3 px-6 text-left">Email</th>
                                <th class="py-3 px-6 text-left">Phone Number</th>
                                <th class="py-3 px-6 text-center">EC Count</th>
                                <th class="py-3 px-6 text-center">ECs</th>
                                <th class="py-3 px-6 text-center">Created At</th>
                                <th class="py-3 px-6 text-center">Created By</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-600 text-sm font-light">
                            {% for teacher in teacherData %}
                                <tr class="border-b border-gray-200 hover:bg-gray-100">
                                    <td class="py-3 px-6 text-left whitespace-nowrap">{{ teacher.name }}</td>
                                    <td class="py-3 px-6 text-left">{{ teacher.email }}</td>
                                    <td class="py-3 px-6 text-left">{{ teacher.phoneNumber }}</td>
                                    <td class="py-3 px-6 text-center">{{ teacher.ecCount }}</td>
                                    <td class="py-3 px-6 text-center">{{ teacher.ecs|join(', ') }}</td>
                                    <td class="py-3 px-6 text-center">{{ teacher.createdAt|date('Y-m-d H:i:s') }}</td>
                                    <td class="py-3 px-6 text-center">{{ teacher.createdBy }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="py-3 px-6 text-center">No teachers found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Quick Actions Section -->
            <div class="w-full lg:w-1/4 bg-white rounded-lg p-4 flex flex-col shadow-xl overflow-y-auto">
                <h2 class="text-2xl font-semibold text-gray-800 mb-2">Quick Actions</h2>
                <p class="mb-8 text-sm text-gray-600">Perform quick actions for teachers and ECs</p>
                <div class="space-y-4 flex-grow">
                    <a href="{{ path('register_respec') }}" class="block w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-5 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 text-center">
                        Add New Teacher
                    </a>
                    <a href="{{ path('add_ec') }}" class="block w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-5 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 text-center">
                        Create New EC
                    </a>
                    <a href="#" class="block w-full bg-purple-500 hover:bg-purple-600 text-white font-semibold py-3 px-5 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 text-center">
                        Generate Teacher Report
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}