{% extends "base_super_admin.html.twig" %}

{% block title %}
    <title>Teacher EC Dashboard</title>
{% endblock %}

{% block body %}
    <div class="min-h-screen bg-white p-4 lg:p-8 flex flex-col">
        <header class="text-gray-900 p-4 lg:p-6 rounded-lg mb-4 lg:mb-8 flex flex-col items-center justify-center container mx-auto text-center border-b-4 border-gray-900">
            <h1 class="text-2xl lg:text-4xl font-bold mb-2">Welcome to {{ ue.name }} Dashboard</h1>
            <p class="text-sm lg:text-lg opacity-80">Today is {{ "now"|date("l, F j, Y") }}</p>
        </header>

        <!-- Flash Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 p-4 lg:p-6 mb-4 lg:mb-8 rounded-md shadow-sm transition-all duration-300 ease-in-out hover:shadow-md" role="alert">
                    <p class="font-bold text-lg">{{ label|capitalize }}</p>
                    <p class="text-base">{{ message }}</p>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Main Content -->
        <div class="flex flex-col bg-gray-100">
            <!-- Dashboard Statistics -->
            <div class="mb-6 p-4 lg:p-6">
                <div class="bg-white rounded-lg shadow-md p-4 lg:p-6">
                    <h2 class="text-xl lg:text-2xl font-semibold text-gray-800 mb-4">Dashboard Statistics</h2>
                    <div class="flex flex-wrap justify-between gap-4 lg:gap-6">
                        {% set stats = [
                            {label: 'Passed Students', count: passedStudents, color: 'green', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'},
                            {label: 'Failed Students', count: failedStudents, color: 'red', icon: 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z'},
                            {label: 'Registered Students', count: registeredStudents, color: 'blue', icon: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z'}
                        ] %}
                        {% for stat in stats %}
                            <div class="bg-{{ stat.color }}-100 rounded-lg p-4 lg:p-6 flex items-center justify-between flex-grow basis-[30%]">
                                <div>
                                    <p class="text-{{ stat.color }}-800 text-sm lg:text-base font-medium">{{ stat.label }}</p>
                                    <p class="text-{{ stat.color }}-600 text-xl lg:text-2xl font-bold">{{ stat.count }}</p>
                                </div>
                                <div class="text-{{ stat.color }}-500">
                                    <svg class="w-8 h-8 lg:w-10 lg:h-10" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ stat.icon }}"></path>
                                    </svg>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="flex flex-col lg:flex-row gap-6 p-4 lg:p-6">
                <!-- Quick Actions Section -->
                <div class="bg-white rounded-lg p-4 lg:p-6 shadow-xl flex flex-col lg:w-1/6">
                    <h2 class="text-lg lg:text-xl font-semibold text-gray-800 mb-4">Quick Actions</h2>
                    <p class="text-sm lg:text-base text-gray-800 mb-6">Below are the quick actions</p>
                    <div class="space-y-4 flex-grow">
                        <a href="#" class="block w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-300 ease-in-out text-center text-sm lg:text-base">
                            Insert notes
                        </a>
                        <a href="#" class="block w-full bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-300 ease-in-out text-center text-sm lg:text-base">
                            Insert note EE anonyme
                        </a>
                        <a href="#" class="block w-full bg-purple-500 hover:bg-purple-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-300 ease-in-out text-center text-sm lg:text-base">
                            Create an Assistant
                        </a>
                    </div>
                </div>

                <!-- Subjects List Section -->
                <div class="bg-white rounded-lg p-4 lg:p-6 shadow-xl overflow-hidden lg:w-1/2">
                    <h2 class="text-lg lg:text-xl font-semibold text-gray-800 mb-4">Subjects Handled</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full bg-white">
                            <thead class="bg-gray-200 text-gray-600 uppercase text-xs lg:text-sm leading-normal">
                                <tr>
                                    <th class="py-3 px-4 text-left">Subject Name</th>
                                    <th class="py-3 px-4 text-left">Code</th>
                                    <th class="py-3 px-4 text-center">Students Count</th>
                                    <th class="py-3 px-4 text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="text-gray-600 text-sm">
                                {% for subject in subjectsHandled %}
                                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                                        <td class="py-3 px-4 text-left whitespace-nowrap">{{ subject.name }}</td>
                                        <td class="py-3 px-4 text-left">{{ subject.code }}</td>
                                        <td class="py-3 px-4 text-center">{{ subject.studentsCount }}</td>
                                        <td class="py-3 px-4 text-center">
                                            <a href="#" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-3 rounded-lg transition duration-300 ease-in-out text-xs lg:text-sm mr-2">
                                                View
                                            </a>
                                            <a href="#" class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-3 rounded-lg transition duration-300 ease-in-out text-xs lg:text-sm">
                                                Update
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="py-3 px-4 text-center">No subjects found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Assistants List Section -->
                <div class="bg-white rounded-lg p-4 lg:p-6 shadow-xl overflow-hidden lg:w-1/3">
                    <h2 class="text-lg lg:text-xl font-semibold text-gray-800 mb-4">Assistants List</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full bg-white">
                            <thead class="bg-gray-200 text-gray-600 uppercase text-xs lg:text-sm leading-normal">
                                <tr>
                                    <th class="py-3 px-4 text-left">Name</th>
                                    <th class="py-3 px-4 text-center">Subject</th>
                                    <th class="py-3 px-4 text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="text-gray-600 text-sm">
                                {% for assistant in assistants %}
                                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                                        <td class="py-3 px-4 text-left whitespace-nowrap">{{ assistant.name }}</td>
                                        <td class="py-3 px-4 text-center">{{ assistant.subject }}</td>
                                        <td class="py-3 px-4 text-center">
                                            <form method="post" action="{{ path('delete_assistant', {'id': assistant.id}) }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assistant.id) }}">
                                                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-3 rounded-lg transition duration-300 ease-in-out text-xs lg:text-sm">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="py-3 px-4 text-center">No assistants found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}