{% extends "base_super_admin.html.twig" %}

{% block title %}
	<title>UIECC Dashboard -
		{{ field.name }}</title>
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-white p-8 flex flex-col overflow-hidden">
		<header class="text-gray-900 p-5 rounded-lg mb-6 flex flex-col items-center justify-center container mx-auto text-center border-b-4 border-gray-900">
			<div class="max-w-7xl mx-auto flex flex-col justify-between items-center">
				<h1 class="text-3xl font-bold text-gray-900">{{ field.name }}
					Dashboard</h1>
				<p class="text-sm text-gray-500">{{ "now"|date("l, F j, Y") }}</p>
			</div>
		</header>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 dark:bg-{{ label == 'success' ? 'green' : 'red' }}-900 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 dark:text-{{ label == 'success' ? 'green' : 'red' }}-100 p-4 mb-6 rounded-md shadow-sm transition-all duration-300 ease-in-out hover:shadow-md" role="alert">
                    <p class="font-bold">{{ (label == 'success' ? 'flash.success' : 'flash.error')|trans }}</p>
                    <p>{{ message|trans }}</p>
                </div>
            {% endfor %}
        {% endfor %}

		<main class="flex-grow container mx-auto">
			<div
				class="grid grid-cols-1 md:grid-cols-4 gap-6">
				<!-- Statistics Section -->
				<div class="col-span-1 md:col-span-4">
					<div class="bg-white rounded-lg shadow-md p-6">
						<h2 class="text-2xl font-semibold text-gray-800 mb-4">Field Statistics</h2>
						<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
							{% set stats = [
                    {label: 'Students', count: studentCount, color: 'blue'},
                    {label: 'UEs', count: ueCount, color: 'green'},
                    {label: 'ECs', count: ecCount, color: 'yellow'},
                    {label: 'Levels', count: levelCount, color: 'purple'}
                ] %}
							{% for stat in stats %}
								<div class="bg-{{ stat.color }}-100 rounded-lg p-4 flex items-center justify-between">
									<div>
										<p class="text-{{ stat.color }}-800 text-sm font-medium">{{ stat.label }}</p>
										<p class="text-{{ stat.color }}-600 text-2xl font-bold">{{ stat.count }}</p>
									</div>
									<div class="text-{{ stat.color }}-500">
										<svg class="w-8 h-8" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
										</svg>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>

				<!-- Actions Section -->
		<div class="col-span-1">
        <div class="bg-white rounded-lg shadow-md p-6 h-[calc(90vh-24rem)] flex flex-col justify-between">
            <h2 class="text-2xl font-semibold text-gray-800 ">Quick Actions</h2>
            <p class="mb-8 text-sm">La liste d'actions par niveau</p>
            <div class="space-y-4 flex-grow flex flex-col justify-center -mt-16">
                <div>
                    <h3 class="text-md font-medium text-gray-700 mb-3">Create a Level</h3>
                    <form action="{{ path('level_new') }}" method="GET">
                        <input type="hidden" name="field_id" value="{{ field.id }}">
                        <button class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-4 px-6 text-lg rounded-lg transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50">
                            Create New Level
                        </button>
                    </form>
                </div>
                <div>
                    <h3 class="text-md font-medium text-gray-700 mb-3">Create a Level Responsible</h3>
                    <form action="{{ path('app_register_resplevel') }}" method="GET">
                    <button id="createResponsibleBtn" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 text-lg rounded-lg transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50">
                        Create Level Responsible
                    </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Levels List -->
    <div class="col-span-1">
        <div class="bg-white rounded-lg shadow-md p-6 h-[calc(90vh-24rem)] flex flex-col">
            <h2 class="text-xl font-semibold text-gray-800">Levels in {{ field.name }}</h2>
            <p class="mb-6 text-sm">La liste des Niveau dans la filiere</p>
            <div class="overflow-y-auto flex-grow">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50 sticky top-0">
                        <tr>
                            <th scope="col" class="px-3 py-2 text-left text-sm font-medium text-gray-500 uppercase tracking-none">Level Name</th>
                            <th scope="col" class="px-3 py-2 text-right text-sm font-medium text-gray-500 uppercase tracking-none">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for level in levels %}
                            <tr>
                                <td class="px-2 py-2 whitespace-nowrap text-sm font-medium text-gray-900">{{ level.name }}</td>
                                <td class="px-2 py-2 whitespace-nowrap text-right text-sm font-medium">
                                    <button onclick="if(confirm('Are you sure you want to delete this level?')) window.location.href='{{ path('delete_level', {'id': level.id}) }}'" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-3 text-base rounded-lg transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2" class="px-4 py-4 whitespace-nowrap text-base text-gray-500 text-center">No levels found for {{ field.name }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Level Responsibles List -->
    <div class="col-span-2">
        <div class="bg-white rounded-lg shadow-md p-6 h-[calc(90vh-24rem)] flex flex-col">
            <h2 class="text-2xl font-semibold text-gray-800 ">Gestionnaires des Niveau</h2>
            <p class="mb-6 text-sm">La liste des Gestionnaires de Niveau</p>
            <div class="overflow-y-auto flex-grow">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50 sticky top-0">
                        <tr>
                            <th scope="col" class="px-3 py-2 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Name</th>
                            <th scope="col" class="px-3 py-2 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Level</th>
                            <th scope="col" class="px-3 py-2 text-left text-sm font-medium text-gray-500 uppercase tracking-wider">Contact</th>
                            <th scope="col" class="px-3 py-2 text-right text-sm font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for resp_level in resp_levels %}
                            <tr>
                                <td class="px-4 py-4 whitespace-nowrap text-base font-medium text-gray-900">{{ resp_level.name }}</td>
                                <td class="px-4 py-4 whitespace-nowrap text-base text-gray-500">{{ resp_level.level.name }}</td>
                                <td class="px-4 py-4 whitespace-nowrap text-base text-gray-500">
                                    <p>{{ resp_level.phoneNumber }}</p>
                                    <p class="text-sm">{{ resp_level.email }}</p>
                                </td>
                                <td class="px-4 py-4 whitespace-nowrap text-right text-base font-medium">
                                    <button onclick="if(confirm('Are you sure you want to delete this responsible?')) window.location.href='{{ path('delete_resp_level', {'id': resp_level.id}) }}'" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 text-base rounded-lg transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="px-4 py-4 whitespace-nowrap text-base text-gray-500 text-center">No level responsibles found for {{ field.name }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
		</main>
	</div>

	<!-- Popup Form for add level responsible -->
	<div id="responsibleFormPopup" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
		<div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white">
			<div class="mt-3">
				<div class="flex justify-between items-center mb-4">
					<h3 class="text-lg font-medium text-gray-900">Create Level Responsible</h3>
					<button id="closeResponsibleForm" class="text-gray-400 hover:text-gray-500">
						<svg class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
						</svg>
					</button>
				</div>
				<form id="responsibleForm" class="space-y-4">
					<div>
						<label for="name" class="block text-sm font-medium text-gray-700">Name</label>
						<input type="text" name="name" id="name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
					</div>
					<input type="hidden" name="field_id" value="{{ field.id }}">
					<div>
						<label for="levelSelect" class="block text-sm font-medium text-gray-700">Level</label>
						<select name="level" id="levelSelect" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
							<option value="" disabled selected>Select Level</option>
							{% for level in levels %}
								<option value="{{ level.id }}">{{ level.name }}</option>
							{% endfor %}
						</select>
					</div>
					<div>
						<label for="phone_number" class="block text-sm font-medium text-gray-700">Phone Number</label>
						<input type="tel" name="phone_number" id="phone_number" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
					</div>
					<div>
						<label for="email" class="block text-sm font-medium text-gray-700">Email</label>
						<input type="email" name="email" id="email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
					</div>
					<div>
						<button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
							Create Responsible
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script>
		document.addEventListener('DOMContentLoaded', function () {
const createResponsibleBtn = document.getElementById('createResponsibleBtn');
const responsibleFormPopup = document.getElementById('responsibleFormPopup');
const responsibleForm = document.getElementById('responsibleForm');
const closeResponsibleForm = document.getElementById('closeResponsibleForm');

createResponsibleBtn.addEventListener('click', () => {
responsibleFormPopup.classList.remove('hidden');
});

closeResponsibleForm.addEventListener('click', () => {
responsibleFormPopup.classList.add('hidden');
});

responsibleForm.addEventListener('submit', (e) => {
e.preventDefault();
// Here you would typically send the data to the server
// For now, we'll just close the popup and reset the form
responsibleFormPopup.classList.add('hidden');
responsibleForm.reset();
});

// Close popup when clicking outside
responsibleFormPopup.addEventListener('click', (e) => {
if (e.target === responsibleFormPopup) {
responsibleFormPopup.classList.add('hidden');
}
});
});
	</script>
{% endblock %}
