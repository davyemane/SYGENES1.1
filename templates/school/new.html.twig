{% extends 'base_login.html.twig' %}

{% block title %}<title>{{ (isNew ? "create-school-title" : "edit-school-title")|trans }}</title>{% endblock %}

{% block body %}
<div class="min-h-screen h-full mt-10 bg-background dark:bg-background text-text dark:text-text transition-colors duration-300 py-12 px-4 sm:px-6 lg:px-8 flex items-center justify-center">
    <div class="w-full max-w-4xl">
        <div class="bg-background dark:bg-gray-800 shadow-2xl rounded-lg overflow-hidden">
            <div class="px-6 py-8 sm:px-10">
                <h1 class="text-5xl font-bold text-text text-center mb-8">
                    {{ (isNew ? 'create-school' : 'edit-school')|trans }}
                </h1>

                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-md" role="alert">
                        <p class="font-bold">{{ "success"|trans }}</p>
                        <p>{{ message|trans }}</p>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-md" role="alert">
                        <p class="font-bold">{{ "error"|trans }}</p>
                        <p>{{ message|trans }}</p>
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'space-y-6 text-text dark:text-text-light'}}) }}
                <div class="space-y-6">
                    {% for field in [form.name, form.logo, form.address, form.phoneNumber, form.email] %}
                        <div>
                            {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
                            {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-medium shadow-sm focus:border-secondary focus:ring-secondary sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white'}}) }}
                            {{ form_errors(field, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                        </div>
                    {% endfor %}
                </div>

                <div class="mt-8">
                    <h3 class="text-xl font-semibold mb-4">{{ "color-schemes"|trans }}</h3>
                    <ul class="colors space-y-6" data-prototype="{{ form_widget(form.colors.vars.prototype)|e('html_attr') }}">
                        {% for colorScheme in form.colors %}
                            <li class="bg-gray-100 dark:bg-gray-700 p-6 rounded-lg shadow-md">
                                {% for colorField in colorScheme %}
                                    <div class="mb-4">
                                        {{ form_label(colorField, null, {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
                                        {{ form_widget(colorField, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-medium shadow-sm focus:border-secondary focus:ring-secondary sm:text-sm bg-white dark:bg-gray-600 text-gray-900 dark:text-white'}}) }}
                                        {{ form_errors(colorField, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                                    </div>
                                {% endfor %}
                                <button type="button" class="remove-color mt-2 px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition">
                                    {{ "remove-color-scheme"|trans }}
                                </button>
                            </li>
                        {% endfor %}
                    </ul>
                    <button type="button" class="add_color_link mt-4 px-4 py-2 bg-secondary text-white rounded-md hover:bg-secondaryHover focus:outline-none focus:ring-2 focus:ring-secondary focus:ring-opacity-50 transition">
                        {{ "add-color-scheme"|trans }}
                    </button>
                </div>

                <div class="pt-6 flex justify-between items-center">
                    <a href="#" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        {{ "back"|trans }}
                    </a>
                    <div class="flex space-x-4">
                        {% if not isNew %}
                            <button type="button" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-secondary hover:bg-secondaryHover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary">
                                {{ "next"|trans }}
                            </button>
                        {% endif %}
                        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primaryHover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary">
                            {{ (isNew ? "create-school-btn" : "update-school-btn")|trans }}
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // (JavaScript code remains the same)
</script>
{% endblock %}