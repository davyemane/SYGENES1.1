{% extends 'base_login.html.twig' %}

{% block title %}<title>{{ (isNew ? "create-school-title" : "edit-school-title") | trans }}</title>{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">{{ (isNew ? 'create-school' : 'edit-school') | trans }}</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ message | trans }}</span>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ message | trans }}</span>
        </div>
    {% endfor %}

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="mb-4">
            {{ form_label(form.name, "school-name" | trans, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.logo, "logo" | trans, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.logo, {'attr': {'class': 'mt-1 block w-full'}}) }}
            {{ form_errors(form.logo) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.address, "address" | trans, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
            {{ form_errors(form.address) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.phoneNumber, "phone-number" | trans, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.phoneNumber, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
            {{ form_errors(form.phoneNumber) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.email, "email" | trans, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-8">
            <h3 class="text-lg font-medium text-gray-700 mb-2">{{ "color-schemes" | trans }}</h3>
            <ul class="colors space-y-4" data-prototype="{{ form_widget(form.colors.vars.prototype)|e('html_attr') }}">
                {% for colorScheme in form.colors %}
                    <li class="bg-gray-50 p-4 rounded-md">
                        {{ form_row(colorScheme.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                        {{ form_row(colorScheme.primaryColor, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                        {{ form_row(colorScheme.secondaryColor, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                        {{ form_row(colorScheme.accentColor, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                        {{ form_row(colorScheme.backgroundColor, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                        {{ form_row(colorScheme.textColor, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                        <button type="button" class="remove-color mt-2 px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">
                            {{ "remove-color-scheme" | trans }}
                        </button>
                    </li>
                {% endfor %}
            </ul>
            <button type="button" class="add_color_link mt-2 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                {{ "add-color-scheme" | trans }}
            </button>
        </div>

        <div>
            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                {{ (isNew ? "create-school-btn" : "update-school-btn") | trans }}
            </button>
        </div>
    {{ form_end(form) }}
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        var $collectionHolder = $('.colors');
        var $addColorButton = $('.add_color_link');

        $collectionHolder.data('index', $collectionHolder.find('li').length);

        $addColorButton.on('click', function(e) {
            addColorForm($collectionHolder);
        });

        $(document).on('click', '.remove-color', function(e) {
            $(this).closest('li').remove();
        });

        function addColorForm($collectionHolder) {
            var prototype = $collectionHolder.data('prototype');
            var index = $collectionHolder.data('index');
            var newForm = prototype.replace(/__name__/g, index);
            $collectionHolder.data('index', index + 1);
            var $newFormLi = $('<li class="bg-gray-50 p-4 rounded-md"></li>').append(newForm);
            $newFormLi.append('<button type="button" class="remove-color mt-2 px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">{{ "remove-color-scheme" | trans }}</button>');
            $collectionHolder.append($newFormLi);

            // Add Tailwind classes to the new form elements
            $newFormLi.find('input[type="text"], input[type="color"]').addClass('mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50');
        }
    });
</script>
{% endblock %}
