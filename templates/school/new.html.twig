{% extends 'base_login.html.twig' %}

{% block title %}<title>{{ (isNew ? "create-school-title" : "edit-school-title") | trans }}</title>{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-4xl">
    <h1 class="text-4xl font-bold mb-8 text-gray-800">{{ (isNew ? 'create-school' : 'edit-school') | trans }}</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded-md" role="alert">
            <p class="font-bold">{{ "success" | trans }}</p>
            <p>{{ message | trans }}</p>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded-md" role="alert">
            <p class="font-bold">{{ "error" | trans }}</p>
            <p>{{ message | trans }}</p>
        </div>
    {% endfor %}

    {{ form_start(form, {'attr': {'class': 'space-y-6 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 h-full flex flex-col'}}) }}
        <div class="mb-6">
            {{ form_label(form.name, "school-name" | trans, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.logo, "logo" | trans, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.logo, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(form.logo) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.address, "address" | trans, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.address, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(form.address) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.phoneNumber, "phone-number" | trans, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.phoneNumber, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(form.phoneNumber) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.email, "email" | trans, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-700 mb-4">{{ "color-schemes" | trans }}</h3>
            <ul class="colors space-y-6" data-prototype="{{ form_widget(form.colors.vars.prototype)|e('html_attr') }}">
                {% for colorScheme in form.colors %}
                    <li class="bg-gray-100 p-6 rounded-lg shadow">
                        {{ form_row(colorScheme.name, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'}}) }}
                        {{ form_row(colorScheme.primaryColor, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'}}) }}
                        {{ form_row(colorScheme.secondaryColor, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'}}) }}
                        {{ form_row(colorScheme.accentColor, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'}}) }}
                        {{ form_row(colorScheme.backgroundColor, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'}}) }}
                        {{ form_row(colorScheme.textColor, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4'}}) }}
                        <button type="button" class="remove-color mt-2 px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition">
                            {{ "remove-color-scheme" | trans }}
                        </button>
                    </li>
                {% endfor %}
            </ul>
            <button type="button" class="add_color_link mt-4 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition">
                {{ "add-color-scheme" | trans }}
            </button>
        </div>

        <div>
            <button type="submit" class="w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition">
                {{ (isNew ? "create-school-btn" : "update-school-btn") | trans }}
            </button>
        </div>
    {{ form_end(form) }}
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        var $collectionHolder = $('.colors');
        var $addColorButton = $('.add_color_link');

        $collectionHolder.data('index', $collectionHolder.find('li').length);

        $addColorButton.on('click', function(e) {
            addColorForm($collectionHolder);
        });

        $(document).on('click', '.remove-color', function(e) {
            $(this).closest('li').remove();
        });

        function addColorForm($collectionHolder) {
            var prototype = $collectionHolder.data('prototype');
            var index = $collectionHolder.data('index');
            var newForm = prototype.replace(/__name__/g, index);
            $collectionHolder.data('index', index + 1);
            var $newFormLi = $('<li class="bg-gray-100 p-6 rounded-lg shadow mb-4"></li>').append(newForm);
            $newFormLi.append('<button type="button" class="remove-color mt-2 px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition">{{ "remove-color-scheme" | trans }}</button>');
            $collectionHolder.append($newFormLi);

            // Add Tailwind classes to the new form elements
            $newFormLi.find('input[type="text"], input[type="color"]').addClass('shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4');
        }
    });
</script>
{% endblock %}  