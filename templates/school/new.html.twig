{% extends 'base_login.html.twig' %}

{% block title %}<title>{{ (isNew ? "create-school-title" : "edit-school-title") | trans }}</title>{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-100 to-orange-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white shadow-2xl rounded-lg overflow-hidden">
            <div class="px-6 py-8 sm:px-10">
                <h1 class="text-3xl font-extrabold text-gray-900 mb-8">
                    {{ (isNew ? 'create-school' : 'edit-school') | trans }}
                </h1>

                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-md" role="alert">
                        <p class="font-bold">{{ "success" | trans }}</p>
                        <p>{{ message | trans }}</p>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-md" role="alert">
                        <p class="font-bold">{{ "error" | trans }}</p>
                        <p>{{ message | trans }}</p>
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="space-y-6">
                        {% for field in [form.name, form.logo, form.address, form.phoneNumber, form.email] %}
                            <div>
                                {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(field, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>
                        {% endfor %}
                    </div>

                    <div class="mt-8">
                        <h3 class="text-xl font-semibold text-gray-800 mb-4">{{ "color-schemes" | trans }}</h3>
                        <ul class="colors space-y-6" data-prototype="{{ form_widget(form.colors.vars.prototype)|e('html_attr') }}">
                            {% for colorScheme in form.colors %}
                                <li class="bg-gray-50 p-6 rounded-lg shadow-md">
                                    {% for colorField in colorScheme %}
                                        <div class="mb-4">
                                            {{ form_label(colorField, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                            {{ form_widget(colorField, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                            {{ form_errors(colorField, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                                        </div>
                                    {% endfor %}
                                    <button type="button" class="remove-color mt-2 px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition">
                                        {{ "remove-color-scheme" | trans }}
                                    </button>
                                </li>
                            {% endfor %}
                        </ul>
                        <button type="button" class="add_color_link mt-4 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition">
                            {{ "add-color-scheme" | trans }}
                        </button>
                    </div>

                    <div class="pt-6">
                        <button type="submit" class="w-full inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-300 ease-in-out transform hover:scale-105">
                            {{ (isNew ? "create-school-btn" : "update-school-btn") | trans }}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        var $collectionHolder = $('.colors');
        var $addColorButton = $('.add_color_link');

        $collectionHolder.data('index', $collectionHolder.find('li').length);

        $addColorButton.on('click', function(e) {
            addColorForm($collectionHolder);
        });

        $(document).on('click', '.remove-color', function(e) {
            $(this).closest('li').remove();
        });

        function addColorForm($collectionHolder) {
            var prototype = $collectionHolder.data('prototype');
            var index = $collectionHolder.data('index');
            var newForm = prototype.replace(/__name__/g, index);
            $collectionHolder.data('index', index + 1);
            var $newFormLi = $('<li class="bg-gray-50 p-6 rounded-lg shadow-md mb-4"></li>').append(newForm);
            $newFormLi.append('<button type="button" class="remove-color mt-2 px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition">{{ "remove-color-scheme" | trans }}</button>');
            $collectionHolder.append($newFormLi);

            // Add Tailwind classes to the new form elements
            $newFormLi.find('input[type="text"], input[type="color"]').addClass('mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm');
            $newFormLi.find('label').addClass('block text-sm font-medium text-gray-700 mb-1');
        }
    });
</script>
{% endblock %}