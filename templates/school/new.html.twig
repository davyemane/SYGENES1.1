{% extends 'base_login.html.twig' %}

{% block title %}
	<title>{{ (isNew ? "create_school_page.create-school-title" : "create_school_page.edit-school-title")|trans }}</title>
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gradient-to-br from-blue-100 to-orange-100 dark:from-gray-800 dark:to-gray-900 py-6 sm:py-8 md:py-12 px-4 sm:px-6 lg:px-8 flex items-center justify-center ">
		<div class="w-full max-w-3xl">
			<div class="bg-white dark:bg-gray-800 shadow-2xl rounded-lg overflow-hidden ">
				<div class="px-4 sm:px-6 md:px-8 py-6 sm:py-8">
					<h1 class="text-3xl sm:text-4xl md:text-4xl font-bold text-text text-center mb-6 sm:mb-8">
						{{ (isNew ? 'create_school_page.create-school' : 'create_school_page.edit-school')|trans }}
					</h1>

					{% for message in app.flashes('success') %}
						<div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-3 sm:p-4 mb-4 sm:mb-6 rounded-md" role="alert">
							<p class="font-bold">{{ "create_school_page.success-message"|trans }}</p>
							<p>{{ message|trans }}</p>
						</div>
					{% endfor %}

					{% for message in app.flashes('error') %}
						<div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-3 sm:p-4 mb-4 sm:mb-6 rounded-md" role="alert">
							<p class="font-bold">{{ "create_school_page.error-message"|trans }}</p>
							<p>{{ message|trans }}</p>
						</div>
					{% endfor %}

					{{ form_start(form, {'attr': {'class': 'space-y-4 sm:space-y-6 text-gray-900 dark:text-gray-200'}}) }}
					<div class="space-y-4 sm:space-y-6">
						{% for field in [form.name, form.logo, form.address, form.phoneNumber, form.email] %}
							<div>
								{{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-semibold text-text dark:text-text-light mb-2'}}) }}
								{{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50 bg-background dark:bg-gray-700 text-text dark:text-white'}}) }}
								{{ form_errors(field, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
							</div>
						{% endfor %}
					</div>

					<div class="pt-6 flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
						<a href="{{path('language_choice')}}" class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 ">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
							</svg>
							{{ "create_school_page.back"|trans }}
						</a>
						<div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 w-full sm:w-auto">
							{% if not isNew %}
								<button type="button" class="w-full sm:w-auto inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-300">
									{{ "create_school_page.next"|trans }}
								</button>
							{% endif %}
							<button type="submit" class="w-full sm:w-auto inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-300">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewbox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M10 3a1 1 0 00-1 1v5H4a1 1 0 100 2h5v5a1 1 0 102 0v-5h5a1 1 0 100-2h-5V4a1 1 0 00-1-1z" clip-rule="evenodd"/>
								</svg>
								{{ (isNew ? "create_school_page.create-school-btn" : "create_school_page.update-school-btn")|trans }}
							</button>
							<a href="{{ path('app_super_admin_dash') }}" class="w-full sm:w-auto inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-300">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewbox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
								</svg>
								{{ "create_school_page.finish"|trans }}
							</a>
						</div>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
