{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="container-fluid d-flex" style="height:700px">
<form class="container-fluid" style="height:100px"  method="post">
    
    <div class="container fluid" style="height:180px"> </div>
    <div class="container">
        <h1 class="h1">Sign In</h1>
        <p class="p">Enter your informations to login to SYGENES</p>
    </div>


    <div class="container" style="height:10px"> </div>

    <div class="form-group container">
    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control w-75" autocomplete="username" required autofocus>
    </div>

    <div class="container" style="height:30px"> </div>

    <div class="form-group container">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control w-75" autocomplete="current-password" required>
    </div>

    <div class="container" style="height:30px"> </div>

    <div class="form-group container">
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>

    <button class="btn btn-primary w-50 py-2 px-5" type="submit">
        Sign in
    </button>
    </div>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="m-3 h6">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
</form>
<div class="container-fluid h-100" >
    <img src="/images/water-tank.JPG" style="height: 100%; width: 100%"  alt="inter-state building">
</div>
</div>
{% endblock %}
