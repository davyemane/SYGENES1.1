{% extends 'base.html.twig' %}

{% block head %}
	{% block title %}
		<title>{{ 'home_page.title'|trans }}</title>
	{% endblock %}
{% endblock %}

{% block body %}
	<style>
		.main-container {
			display: flex;
			align-items: center;
			justify-content: center;
			min-height: 100vh;
			overflow: hidden;
			position: relative;
			padding: 20px;
		}

		.content-wrapper {
			opacity: 0;
			transform: translateY(50px);
			animation: fadeInUp 1s ease-out forwards;
			max-width: 100%;
		}

		@keyframes fadeInUp {
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		.btn-container {
			position: relative;
			display: inline-block;
			transition: transform 0.3s ease;
		}

		.btn-container:hover {
			transform: scale(1.05);
		}

		.btn-container a {
			position: relative;
			z-index: 1;
			transition: transform 0.3s ease;
		}

		.btn-container .btn-bg {
			content: "";
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-color: black;
			z-index: 0;
			transition: all 0.3s ease;
			transform: translate(5px, 5px);
		}

		.btn-container:hover .btn-bg {
			transform: translate(7px, 7px);
		}

		@media(max-width: 640px) {
			.main-container {
				padding: 10px;
			}

			.content-wrapper {
				padding: 0 10px;
			}

			.text-4xl {
				font-size: 2.5rem;
			}

			.text-lg {
				font-size: 1rem;
			}
		}
	</style>
	<div class="main-container">
		<div class="relative isolate px-6 pt-10 lg:px-8 content-wrapper">
			<div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56 z-10">
				<div
					class="hidden sm:mb-8 sm:flex sm:justify-center">
                    {# <div class="relative rounded-full px-3 py-1 text-sm leading-6 text-text ring-1 ring-gray-900/10 hover:ring-gray-900/20">
						{{ 'home_page.documentation_prompt'|trans }}
						    <a href="{{ path('app_documentation_page') }}" class="font-semibold text-secondary">
						     <span class="absolute inset-0" aria-hidden="true"></span>{{ 'home_page.read_more'|trans }}
						     <span aria-hidden="true">&rarr;</span>
						           </a>
						                    </div> #}
				</div>
				<div class="text-center">
					<h1 class="text-4xl font-bold tracking-tight text-text sm:text-6xl">{{ 'home_page.welcome'|trans }}
						<span style="color: var(--primary-color);">{{ 'home_page.name'|trans }}</span>
					</h1>
					<p class="mt-6 text-lg leading-8 text-text">{{ 'home_page.description'|trans }}</p>
					<div class="mt-10 flex items-center justify-center gap-x-6">
						<div class="relative inline-block transition-transform duration-300 hover:scale-105 group">
							<a href="{{ path('language_choice') }}" class="relative z-10 inline-block bg-primary text-background rounded-md px-5 py-4 text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-secondary transition-transform duration-300">
								{{ 'home_page.get_started'|trans }}
								<span aria-hidden="true">â†’</span>
							</a>
							<div class="absolute top-0 left-0 w-full h-full bg-black rounded-md transition-all duration-300 transform translate-x-[5px] translate-y-[5px] group-hover:translate-x-[7px] group-hover:translate-y-[7px]"></div>
						</div>
					</div>
				</div>
			</div>
			<div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-50 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
				<div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr opacity-30 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]" style="background-image: linear-gradient(to right, var(--primary-color), var(--secondary-color)); clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
			</div>
		</div>
	</div>
{% endblock %}
