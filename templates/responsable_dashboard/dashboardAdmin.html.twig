{% extends 'base_AdminDashboard.html.twig' %}

{% block title %}Admin Home{% endblock %}


{% block body %}
<div class="bg-white flex flex-col justify-start items-start ml-64 mr-10 p-6 ">
<div class="mt-8 mx-12 flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold">Dashboard</h1>
    <div class="flex items-center space-x-4">
        <a href="#" class="text-gray-600">Go To Website</a>
        <div class="flex items-center space-x-2">
            <img class="w-8 h-8 rounded-full" src="https://via.placeholder.com/150" alt="Profile picture">
            <div class="text-sm font-medium text-gray-700">Mr Patient</div>
        </div>
    </div>
</div>

<div class="mt-8 mx-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <div class="p-4 bg-white rounded-lg shadow">
        <h2 class="text-lg font-medium">Department</h2>
        <div class="mt-2 text-2xl font-semibold">8</div>
    </div>
    <div class="p-4 bg-white rounded-lg shadow">
        <h2 class="text-lg font-medium">Doctor</h2>
        <div class="mt-2 text-2xl font-semibold">14</div>
    </div>
    <div class="p-4 bg-white rounded-lg shadow">
        <h2 class="text-lg font-medium">Patient</h2>
        <div class="mt-2 text-2xl font-semibold">1</div>
    </div>
    <div class="p-4 bg-white rounded-lg shadow">
        <h2 class="text-lg font-medium">Patient Appointment</h2>
        <div class="mt-2 text-2xl font-semibold">3</div>
    </div>
    <div class="p-4 bg-white rounded-lg shadow">
        <h2 class="text-lg font-medium">Invoice</h2>
        <div class="mt-2 text-2xl font-semibold">0</div>
    </div>
    <div class="p-4 bg-white rounded-lg shadow">
        <h2 class="text-lg font-medium">Prescription</h2>
        <div class="mt-2 text-2xl font-semibold">0</div>
    </div>
    <div class="p-4 bg-white rounded-lg shadow">
        <h2 class="text-lg font-medium">Payment</h2>
        <div class="mt-2 text-2xl font-semibold">0</div>
    </div>
</div>

<div class="mt-8 ml-96 mt-6 grid grid-cols-1 lg:grid-cols-2 gap-4">
    <div class="p-4 bg-white rounded-lg shadow">
        <h2 class="text-lg font-medium">Monthly Registered Users</h2>
        <canvas id="monthlyUsersChart" class="mt-4"></canvas>
    </div>
    <div class="p-4 bg-white rounded-lg shadow">
        <h2 class="text-lg font-medium">Monthly Earning</h2>
        <div class="flex justify-between items-center mt-2">
            <div class="text-2xl font-semibold">$29.5</div>
            <div class="text-sm text-red-500">-31.08% From Previous week</div>
        </div>
        <canvas id="monthlyEarningsChart" class="mt-4"></canvas>
    </div>
</div>

</div>
{% endblock %}
