{% extends 'base_new.html.twig' %}

{% block head %}
{% block title %}<title>Admin Dashboard</title>{% endblock %}
{% endblock %}

{% block body %}
<div class="min-h-screen py-12 sm:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-2xl overflow-hidden">
            <div class="px-4 py-5 sm:p-6">
                <div class="text-center">
                    <div class="inline-flex rounded-full bg-blue-100 px-4 py-2 text-sm font-semibold text-blue-600 mb-6">
                        Consult our documentation if you need help
                        <a href="{{ path('app_documentation_page') }}" class="ml-2 font-bold hover:underline">
                            Read more
                            <span aria-hidden="true">&rarr;</span>
                        </a>
                    </div>
                    {% set hour = "now"|date("H") %}
                    <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl mb-2">
                        Good {% if hour < 12 %}Morning{% elseif hour < 18 %}Afternoon{% else %}Evening{% endif %},
                    </h1>
                    <h2 class="text-3xl font-bold text-orange-500 sm:text-4xl md:text-5xl mb-4">
                        {{ user.username }}
                    </h2>
                    <p class="text-xl text-gray-600 mb-8">What would you like to do today?</p>
                </div>
                <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                    {% set actions = [] %}

                    {% if privileges is not empty %}
                        {% set privilegeMap = {
                            'Add user': { path: 'add_user', label: 'Add User', icon: 'M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z', color: 'bg-blue-500 hover:bg-blue-600' },
                            'Add Field': { path: 'add_field', label: 'Add Field', icon: 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10', color: 'bg-green-500 hover:bg-green-600' },
                            'Add Profile': { path: 'add_profile', label: 'Add Profile', icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z', color: 'bg-purple-500 hover:bg-purple-600' },
                            'Add Mark': { path: 'add_note', label: 'Add Mark', icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z', color: 'bg-yellow-500 hover:bg-yellow-600' },
                            'Add UE': { path: 'add_ue', label: 'Add UE', icon: 'M12 6v6m0 0v6m0-6h6m-6 0H6', color: 'bg-red-500 hover:bg-red-600' },
                            'Add EC': { path: 'add_ec', label: 'Add EC', icon: 'M12 6v6m0 0v6m0-6h6m-6 0H6', color: 'bg-indigo-500 hover:bg-indigo-600' },
                            'Add Level': { path: 'add_level', label: 'Add Level', icon: 'M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2', color: 'bg-pink-500 hover:bg-pink-600' },
                            'Generate PV': { path: 'generate_pv', label: 'Generate PV', icon: 'M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z', color: 'bg-gray-500 hover:bg-gray-600' },
                            'Generate Transcript of notes': { path: 'generate_transcript', label: 'Generate Transcript', icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z', color: 'bg-orange-500 hover:bg-orange-600' },
                            'Validate Student': { path: 'validate_student', label: 'Validate Student', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z', color: 'bg-teal-500 hover:bg-teal-600' },
                            'Add Student': { path: 'add_student', label: 'Add/Import Student', icon: 'M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z', color: 'bg-blue-500 hover:bg-blue-600' },
                            'View statistics': { path: 'view_statistics', label: 'View Statistics', icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z', color: 'bg-yellow-500 hover:bg-yellow-600' },
                            'List Students': { path: 'list_students', label: 'List Students', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2', color: 'bg-green-500 hover:bg-green-600' },
                            'List Fields': { path: 'list_fields', label: 'List Fields', icon: 'M4 6h16M4 10h16M4 14h16M4 18h16', color: 'bg-purple-500 hover:bg-purple-600' },
                            'List Profile': { path: 'list_profiles', label: 'List Profiles', icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z', color: 'bg-indigo-500 hover:bg-indigo-600' },
                            'Add School': { path: 'add_school', label: 'Add School', icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4', color: 'bg-red-500 hover:bg-red-600' },
                            'Detail Student': { path: 'detail_student', label: 'Student Details', icon: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z', color: 'bg-pink-500 hover:bg-pink-600' },
                            'List EC': { path: 'list_ec', label: 'List EC', icon: 'M4 6h16M4 10h16M4 14h16M4 18h16', color: 'bg-teal-500 hover:bg-teal-600' },
                            'List UE': { path: 'list_ue', label: 'List UE', icon: 'M4 6h16M4 10h16M4 14h16M4 18h16', color: 'bg-orange-500 hover:bg-orange-600' },
                            'View Marks': { path: 'view_marks', label: 'View Marks', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01', color: 'bg-gray-500 hover:bg-gray-600' }
                        } %}

                        {% for privilege in privileges %}
                            {% if privilege.name in privilegeMap|keys %}
                                {% set action = privilegeMap[privilege.name] %}
                                {% set actions = actions|merge([action]) %}
                            {% endif %}
                        {% endfor %}
                    {% endif %}

                    {% for action in actions %}
                        <a href="{{ path(action.path) }}" class="flex items-center p-5 rounded-lg shadow-md transition duration-150 ease-in-out {{ action.color }} text-white">
                            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ action.icon }}"></path>
                            </svg>
                            <span class="ml-3 text-sm font-medium">{{ action.label }}</span>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}