{% extends 'base_new.html.twig' %}

{% block head %}
  {% block title %}<title>UE</title>{% endblock %}
{% endblock %}

{% block body %}
<div class="min-h-screen flex justify-center items-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full space-y-8 bg-background p-10 rounded-lg shadow-2xl">
    <div>
      <h1 class="text-4xl font-bold text-blue-600 text-center">Add UE</h1>
      <p class="mt-2 text-center text-sm text-gray-600">This is where you add the various UEs.</p>
    </div>
    
    {% if app.session.flashBag.has('error') %}
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline">{{ app.session.flashBag.get('error')[0] }}</span>
      </div>
    {% endif %}
    
    <form class="mt-8 space-y-6" method="post" id="ue-form">
      {{ form_start(form) }}
      <div class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8">
        
        <div>
          {{ form_label(form.codeUE, 'Code UE', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.codeUE, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div class="sm:col-span-2">
          {{ form_label(form.name, 'UE Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div class="sm:col-span-2">
          {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.description, {'attr': {'class': 'p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div>
          {{ form_label(form.credit, 'Credit', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.credit, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>
        
        <div>
          {{ form_label(form.semester, 'Semester', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.semester, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div class="sm:col-span-2">
          {{ form_label(form.level, 'Level', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.level, {'attr': {'class': 'p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div class="sm:col-span-2">
          {{ form_label(form.fields, 'Fields', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.fields, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>
        
      </div>

      <div class="mt-6 flex justify-end space-x-3">
        <button type="button" onclick="resetForm()" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          Cancel
        </button>
        {{ form_widget(form.submit, {'attr': {'class': 'px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500'}}) }}
      </div>
      
      {{ form_end(form) }}
    </form>
  </div>
</div>

<script>
  function resetForm() {
    document.getElementById('ue-form').reset();
  }
</script>
{% endblock %}
