{% extends 'base_login.html.twig' %}

{% block title %}<title>{{ (role.id ? 'Modifier' : 'Créer') | trans }} </title>{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12 max-w-3xl">
    <h1 class="text-4xl font-bold mb-8 text-gray-800">{{  (role.id ? 'Modifier' : 'Créer') | trans}} un rôle</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 p-4 mb-6 rounded-md shadow-sm" role="alert">
                <p class="font-bold">{{ label == 'success' ? 'Succès' : 'Erreur' }}</p>
                <p>{{ message }}</p>
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, {'attr': {'class': 'space-y-8 bg-white shadow-md rounded-lg p-8'}}) }}
        <div class="space-y-6">
            <div>
                {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 transition'}}) }}
                {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>

            <div>
                {{ form_label(form.school, 'École', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.school, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 transition'}}) }}
                {{ form_errors(form.school, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>
        </div>

        <div class="mt-8">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Privilèges</h3>
            <div class="bg-gray-50 rounded-lg p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for privilege in form.privileges %}
                        <div class="flex items-center">
                            {{ form_widget(privilege, {'attr': {'class': 'h-5 w-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 transition'}}) }}
                            {{ form_label(privilege, null, {'label_attr': {'class': 'ml-3 text-sm text-gray-700'}}) }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(form.privileges, {'attr': {'class': 'text-red-500 text-sm mt-2'}}) }}
            </div>
        </div>

        <div class="pt-8">
            <div class="flex justify-end">
                <button type="submit" class="inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition">
                    {{ role.id ? 'Mettre à jour' : 'Créer' }}
                </button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}