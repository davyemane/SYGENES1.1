{% extends 'base_login.html.twig' %}

{% block title %}<title>{{ (role.id ? 'Modifier' : 'Créer') | trans }} un rôle</title>{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-100 to-orange-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <div class="px-6 py-8 sm:px-10">
                <div class="flex justify-between items-center mb-8">
                    <h1 class="text-3xl font-extrabold text-gray-900">
                        {{ role.id ? 'Modifier' : 'Créer' }} un rôle
                    </h1>
                    <button id="toggleExistingRoles" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                        Afficher/Masquer les rôles existants
                    </button>
                </div>

                <div id="existingRolesContainer" class="mb-8 hidden">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">Rôles existants</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for existingRole in existingRoles %}
                            <div class="bg-gradient-to-r from-orange-100 to-orange-200 rounded-lg p-4 shadow-md hover:shadow-lg transition duration-300">
                                <h3 class="font-bold text-lg text-gray-800 mb-2">{{ existingRole.name }}</h3>
                                <p class="text-sm text-gray-600">École: {{ existingRole.school ? existingRole.school.name : 'Non assignée' }}</p>
                                <p class="text-sm text-gray-600">Privilèges: {{ existingRole.privileges|length }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 p-4 mb-6 rounded-md shadow-sm" role="alert">
                            <p class="font-bold">{{ label == 'success' ? 'Succès' : 'Erreur' }}</p>
                            <p>{{ message }}</p>
                        </div>
                    {% endfor %}
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                    <div class="space-y-6">
                        <div>
                            {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition'}}) }}
                            {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>

                    </div>

                    <div class="mt-8">
                        <h3 class="text-xl font-semibold text-gray-800 mb-4">Privilèges</h3>
                        <div class="bg-gray-50 rounded-lg p-6">
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                                {% for privilege in form.privileges %}
                                    <div class="flex items-center">
                                        {{ form_widget(privilege, {'attr': {'class': 'h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500 transition'}}) }}
                                        {{ form_label(privilege, null, {'label_attr': {'class': 'ml-3 text-sm text-gray-700'}}) }}
                                    </div>
                                {% endfor %}
                            </div>
                            {{ form_errors(form.privileges, {'attr': {'class': 'text-red-500 text-sm mt-2'}}) }}
                        </div>
                    </div>

                    <div class="pt-8">
                        <div class="flex justify-end">
                            <button type="submit" class="inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition duration-300 ease-in-out transform hover:scale-105">
                                {{ role.id ? 'Mettre à jour' : 'Créer' }}
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('toggleExistingRoles').addEventListener('click', function() {
        var container = document.getElementById('existingRolesContainer');
        container.classList.toggle('hidden');
    });
</script>
{% endblock %}