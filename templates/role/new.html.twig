{% extends 'base.html.twig' %}

{% block title %}{{ role.id ? 'Modifier' : 'Créer' }} un rôle{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">{{ role.id ? 'Modifier' : 'Créer' }} un rôle</h1>
        <button id="toggleExistingRoles" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Afficher/Masquer les rôles existants
        </button>
    </div>

    <div id="existingRolesContainer" class="mb-6 hidden">
        <h2 class="text-2xl font-bold mb-4">Rôles existants</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for existingRole in existingRoles %}
                <div class="bg-white shadow-md rounded p-4">
                    <h3 class="font-bold text-lg mb-2">{{ existingRole.name }}</h3>
                    <p class="text-sm text-gray-600">École: {{ existingRole.school ? existingRole.school.name : 'Non assignée' }}</p>
                    <p class="text-sm text-gray-600">Privilèges: {{ existingRole.privileges|length }}</p>
                </div>
            {% endfor %}
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border border-{{ label == 'success' ? 'green' : 'red' }}-400 text-{{ label == 'success' ? 'green' : 'red' }}-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline">{{ message }}</span>
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        {# ... Le reste de votre formulaire reste inchangé ... #}
    {{ form_end(form) }}
</div>

<script>
    document.getElementById('toggleExistingRoles').addEventListener('click', function() {
        var container = document.getElementById('existingRolesContainer');
        container.classList.toggle('hidden');
    });
</script>
{% endblock %}