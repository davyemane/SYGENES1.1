{% extends 'base_login.html.twig' %}

{% block title %}<title>{{ (role.id ? "role.edit-role-title" : "role.create-role-title")|trans }}</title>{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-100 to-orange-100 dark:from-gray-800 dark:to-gray-900 py-12 px-4 sm:px-6 lg:px-8 transition-colors duration-300">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white dark:bg-gray-800 shadow-xl rounded-lg overflow-hidden">
            <div class="px-6 py-8 sm:px-10">
                <div class="flex justify-between items-center mb-8">
                    <div class="flex items-center space-x-4">
                        <a href="{{ path('field_new') }}" class="bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold py-2 px-4 rounded-md transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-opacity-50 shadow-lg">
                            <i class="fas fa-arrow-left mr-2"></i>{{ "role.back"|trans }}
                        </a>
                        <a href="{{ path('level_new') }}" class="bg-secondary hover:bg-secondaryHover text-white font-semibold py-2 px-4 rounded-md transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-secondary focus:ring-opacity-50 shadow-lg">
                            {{ "role.next"|trans }}<i class="fas fa-arrow-right ml-2"></i>
                        </a>
                        <h1 class="text-3xl font-extrabold text-text dark:text-text-light">
                            {{ (role.id ? "role.edit-role" : "role.create-role")|trans }}
                        </h1>
                    </div>
                    <button id="toggleExistingRoles" class="bg-secondary hover:bg-secondaryHover text-white font-semibold py-2 px-4 rounded-md transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-secondary focus:ring-opacity-50">
                        {{ "role.toggle-existing-roles"|trans }}
                    </button>
                </div>

                <div id="existingRolesContainer" class="mb-8 hidden">
                    <h2 class="text-2xl font-bold text-text dark:text-text-light mb-4">{{ "role.existing-roles"|trans }}</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for existingRole in existingRoles %}
                            <div class="bg-gradient-to-r from-orange-100 to-orange-200 dark:from-gray-700 dark:to-gray-600 rounded-lg p-4 shadow-md hover:shadow-lg transition duration-300">
                                <h3 class="font-bold text-lg text-text dark:text-text-light mb-2">{{ existingRole.name }}</h3>
                                <p class="text-sm text-gray-600 dark:text-gray-300">{{ "role.school"|trans }}: {{ existingRole.school ? existingRole.school.name : "role.not-assigned"|trans }}</p>
                                <p class="text-sm text-gray-600 dark:text-gray-300">{{ "role.privileges"|trans }}: {{ existingRole.privileges|length }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 dark:bg-{{ label == 'success' ? 'green' : 'red' }}-900 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 dark:text-{{ label == 'success' ? 'green' : 'red' }}-100 p-4 mb-6 rounded-md shadow-sm" role="alert">
                            <p class="font-bold">{{ (label == 'success' ? "role.success" : "role.error")|trans }}</p>
                            <p>{{message|trans }}</p>
                        </div>
                    {% endfor %}
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                    <div class="space-y-6">
                        <div>
                            {{ form_label(form.name, 'role.name'|trans, {'label_attr': {'class': 'block text-sm font-semibold text-text dark:text-text-light mb-2'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-secondary focus:ring focus:ring-secondary focus:ring-opacity-50 transition bg-background dark:bg-gray-700 text-text dark:text-white'}}) }}
                            {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                    </div>

                    <div class="mt-8">
                        <h3 class="text-xl font-semibold text-text dark:text-text-light mb-4">{{ "role.privileges"|trans }}</h3>
                        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6">
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                                {% for privilege in form.privileges %}
                                    <div class="flex items-center">
                                        {{ form_widget(privilege, {'attr': {'class': 'h-5 w-5 text-secondary border-gray-300 dark:border-gray-600 rounded focus:ring-secondary transition'}}) }}
                                        {{ form_label(privilege, null, {'label_attr': {'class': 'ml-3 text-sm text-text dark:text-text-light'}}) }}
                                    </div>
                                {% endfor %}
                            </div>
                            {{ form_errors(form.privileges, {'attr': {'class': 'text-red-500 text-sm mt-2'}}) }}
                        </div>
                    </div>

                    <div class="pt-8">
                        <div class="flex justify-end">
                            <button type="submit" class="inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primaryHover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition duration-300 ease-in-out transform hover:scale-105">
                                {{ (role.id ? "role.update" : "role.create")|trans }}
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('toggleExistingRoles').addEventListener('click', function() {
        var container = document.getElementById('existingRolesContainer');
        container.classList.toggle('hidden');
    });
</script>
{% endblock %}