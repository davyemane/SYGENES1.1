{% extends 'base_login.html.twig' %}

{% block title %}<title>{{ 'register.register'|trans }}</title>{% endblock %}

{% block body %}
<div class="max-w-lg mx-auto mt-10 p-8 bg-white dark:bg-gray-800 shadow-lg rounded-lg transition-colors duration-300">
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold text-primary dark:text-primary-light">{{ 'register.user-registration'|trans }}</h2>
        <a href="{{path('level_new')}}" class="bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-medium py-2 px-4 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400 focus:ring-opacity-50 shadow-md">
            <i class="fas fa-arrow-left mr-2"></i>{{ 'register.back'|trans }}
        </a>
    </div>
    
    {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
        {% for field in [
            {'name': 'username', 'label': 'register.username'},
            {'name': 'email', 'label': 'register.email'},
            {'name': 'plainPassword', 'label': 'register.password'}
        ] %}
            <div class="form-group">
                {{ form_label(attribute(registrationForm, field.name), field.label|trans, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(attribute(registrationForm, field.name), {'attr': {'class': 'block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm focus:ring-2 focus:ring-primary focus:border-primary sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition duration-300 ease-in-out'}}) }}
            </div>
        {% endfor %}

        <div class="form-group">
            {{ form_label(registrationForm.profilePicture, 'register.profile-picture'|trans, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
            {{ form_widget(registrationForm.profilePicture, {'attr': {'class': 'block w-full text-sm text-gray-500 dark:text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-white hover:file:bg-primaryHover cursor-pointer'}}) }}
        </div>

        <div class="form-group">
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">{{ 'register.roles'|trans }}</label>
            <div class="space-y-2 bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
                {% if existingRoles is defined and existingRoles|length > 0 %}
                    {% for role in existingRoles %}
                        <div class="flex items-center">
                            <input type="checkbox" id="role_{{ role.id }}" name="roles[]" value="{{ role.id }}" class="h-4 w-4 text-primary border-gray-300 dark:border-gray-600 rounded focus:ring-primary">
                            <label for="role_{{ role.id }}" class="ml-2 text-sm text-gray-700 dark:text-gray-300">{{ role.name }}</label>
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'register.no-roles-available'|trans }}</p>
                {% endif %}
            </div>
        </div>

        <h3 class="text-xl font-bold mt-8 mb-4 text-gray-800 dark:text-gray-200">{{ 'register.responsible-information'|trans }}</h3>
        
        {% for field in [
            {'name': 'name', 'label': 'register.name'},
            {'name': 'phoneNumber', 'label': 'register.phone-number'}
        ] %}
            <div class="form-group">
                {{ form_label(attribute(registrationForm.Responsable, field.name), field.label|trans, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(attribute(registrationForm.Responsable, field.name), {'attr': {'class': 'block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm focus:ring-2 focus:ring-primary focus:border-primary sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition duration-300 ease-in-out'}}) }}
            </div>
        {% endfor %}

        <div class="flex items-center mt-6">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-primary border-gray-300 dark:border-gray-600 rounded focus:ring-primary'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'register.agree-to-terms'|trans, {'label_attr': {'class': 'ml-2 text-sm text-gray-700 dark:text-gray-300'}}) }}
        </div>

        <button type="submit" class="w-full bg-primary hover:bg-primaryHover text-white font-semibold py-3 px-4 rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition duration-300 ease-in-out transform hover:scale-105 mt-6">{{ 'register.register'|trans }}</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}