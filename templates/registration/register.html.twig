{# templates/registration/register.html.twig #}

{% extends 'base_AdminDashboard.html.twig' %}


{% block head %}
  {% block title %}<title> Register </title>{% endblock %}
{% endblock %}

{% block body %}
<div class="bg-white flex flex-col justify-start items-start ml-64 mr-10 p-6 ">
    <div class="container">
        <h1 class="text-4xl font-semibold text-blue-600">Register new user</h1>
        <p class="text-sm text-gray-600 mt-1 mb-5">Fill out the form below to register a new user with rights.</p>
    </div>

    {# Flash messages (e.g., errors) #}
    {% for flash_error in app.flashes('verify_email_error') %}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        {{ flash_error }}
    </div>
    {% endfor %}

    {# Display form errors if any #}
    {{ form_errors(registrationForm) }}

    {# Start the form #}
    {{ form_start(registrationForm, { 'attr': {'class': 'w-full ', 'id':'registration_form' } }) }}
    <div class="border-b border-gray-900/10 pb-12">
        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">

            <div class="sm:col-span-3">
                <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Username</label>
                <div class="mt-2">
                    {# Render username field #}
                    {{ form_row(registrationForm.username, {
                        'attr': {'class': 'w-full px-3 py-2 mb-3 rounded border border-gray-300'}
                    }) }}
                </div>
            </div>


            <div class="sm:col-span-3">
                <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email</label>
                <div class="mt-2">
                    {# Render email field #}
                    {{ form_row(registrationForm.email, {
            'attr': {'class': 'w-full px-3 py-2 mb-3 rounded border border-gray-300'}
        }) }}
                </div>
            </div>


            <div class="sm:col-span-4">
                <label for="profile_picture" class="block text-sm font-medium leading-6 text-gray-900">Profile Picture
                    (JPG/PNG
                    file)</label>
                <div class="mt-2">
                    {# Render profile picture upload field #}
                    {{ form_row(registrationForm.profilePicture, {
            'attr': {'class': 'block w-full text-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500'}
        }) }}
                </div>
            </div>


            <div class="sm:col-span-3">
                <label for="student" class="block text-sm font-medium leading-6 text-gray-900">Student</label>
                <div class="mt-2">
                    {# Render student field (assuming it's a related entity) #}
                    {{ form_row(registrationForm.student, {
            'attr': {'class': 'w-full px-3 py-2 mb-3 rounded border border-gray-300'}
        }) }}
                </div>
            </div>


            <div class="sm:col-span-3">
                <label for="responsable" class="block text-sm font-medium leading-6 text-gray-900">Responsable</label>
                <div class="mt-2">
                    {# Render Responsable field (assuming it's a related entity) #}
                    {{ form_row(registrationForm.Responsable, {
            'attr': {'class': 'w-full px-3 py-2 mb-3 rounded border border-gray-300'}
        }) }}
                </div>
            </div>


            <div class="sm:col-span-4">
                <label for="roles" class="block text-sm font-medium leading-6 text-gray-900">Roles</label>
                <div class="mt-2">
                    {# Render roles checkboxes #}
                    {{ form_label(registrationForm.roles, ' ') }}
                    {{ form_widget(registrationForm.roles, {
                        'attr': {
                        'class': 'flex flex-row space-x-4',  
                        }
                    }) }}
                </div>
            </div>


            <div class="sm:col-span-3">
                <label for="terms_and_conditions" class="block text-sm font-medium leading-6 text-gray-900">Terms and
                    conditions</label>
                <div class="mt-2">
                    {# Render 'agree to terms' checkbox #}
                    <div class="mb-3">
                        <label class="inline-flex items-center">
                            {{ form_widget(registrationForm.agreeTerms, {
                    'attr': {'class': 'form-checkbox h-5 w-5 text-blue-600'}
                }) }}
                            <span class="ml-2 text-gray-700">I agree to the terms</span>
                        </label>
                    </div>
                </div>
            </div>


            <div class="sm:col-span-4">
                <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
                <div class="mt-2">
                    {# Render password field #}
                    {{ form_row(registrationForm.plainPassword, {
                    'label': ' ',
                     'attr': {'class': 'w-full px-3 py-2 mb-3 rounded border border-gray-300'}
                    }) }}
                </div>
            </div>


        </div>
    </div>
    {# Render submit button #}
    <div class="mt-6 flex justify-end">
        <button type="button"
            class="mr-4 py-2 px-4 border border-orange-500 rounded-md text-sm font-medium text-orange-500 bg-white hover:bg-orange-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
            onclick="resetForm()">Cancel</button>
        <button type="submit"
            class="py-2 px-4 border border-transparent rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2">
            Register
        </button>
    </div>

    {{ form_end(registrationForm) }}
</div>
<script>
    function resetForm() {
        document.getElementById('registration_form').reset();
    }
</script>
{% endblock %}