{# templates/user/edit.html.twig #}
{% extends 'base_login.html.twig' %}

{% block head %}
  {% block title %} <title> Edit Profile </title> {% endblock %}
{% endblock %}

{% block body %}
    <h1 class="text-2xl font-semibold mb-4">Modifier mon profil</h1>

    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.username, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.username, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.email, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.profilePicture, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.profilePicture, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.profilePicture, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
        </div>

        <button type="submit" class="w-full inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Enregistrer</button>
    {{ form_end(form) }}

    <button id="toggle-password-change" class="w-full inline-flex justify-center mt-3 py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Changer le mot de passe</button>

    <div id="password-change-form" class="mt-4" style="display:none;">
        {{ form_start(passwordChangeForm) }}
            <div class="mb-4">
                {{ form_label(passwordChangeForm.currentPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(passwordChangeForm.currentPassword, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                {{ form_errors(passwordChangeForm.currentPassword, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(passwordChangeForm.newPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(passwordChangeForm.newPassword.first, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                {{ form_errors(passwordChangeForm.newPassword.first, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(passwordChangeForm.newPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(passwordChangeForm.newPassword.second, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                {{ form_errors(passwordChangeForm.newPassword.second, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
            </div>

            <button type="submit" class="w-full inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Enregistrer le nouveau mot de passe</button>
        {{ form_end(passwordChangeForm) }}
    </div>

    <script>
        document.getElementById('toggle-password-change').addEventListener('click', function() {
            var passwordChangeForm = document.getElementById('password-change-form');
            if (passwordChangeForm.style.display === 'none') {
                passwordChangeForm.style.display = 'block';
            } else {
                passwordChangeForm.style.display = 'none';
            }
        });
    </script>
{% endblock %}
