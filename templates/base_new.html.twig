<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Admin Dashboard</title>
	
	<link rel="shortcut icon" href="/images/uiecc_logo.png" type="image/x-icon">
	<script src="https://cdn.tailwindcss.com"></script>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
	{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	{% endblock %}
	{{ encore_entry_script_tags('app') }}


	<style>
		#searchInput::placeholder {
			color: var(--text-color);
			opacity: 0.7;
		}

		#searchInput:focus {
			outline: none;
			box-shadow: none;
		}

		.submenu {
			max-height: 0;
			overflow: hidden;
			transition: max-height 0.3s ease-out;
		}

		.submenu.active {
			max-height: 500px;
			transition: max-height 0.5s ease-in;
		}

		.submenu-item.hidden {
			display: none;
		}

		.submenu-item {
			padding-left: 2.5rem;
		}

		.submenu {
			position: relative;
		}

		.submenu-trigger {
			cursor: pointer;
			user-select: none;
		}

		/* Responsive Design */
		@media(max-width: 1024px) {
			#sidebarDiv {
				width: 20rem;
			}

			#toggleBtn {
				right: -1rem;
				top: 1rem;
			}
		}

		@media(max-width: 768px) {
			#sidebarDiv {
				width: 16rem;
				position: fixed;
				left: -16rem;
				z-index: 10;
				transition: left 0.3s ease;
			}

			#sidebarDiv.open {
				left: 0;
			}

			#contentDiv {
				margin-left: 0;
			}

			#toggleBtn {
				display: none;
			}
		}

		@media(max-width: 640px) {
			#searchContainer {
				margin-top: 1rem;
			}
		}
	</style>
</head>

<body class="font-sans antialiased leading-none h-full bg-background w-full text-text">
