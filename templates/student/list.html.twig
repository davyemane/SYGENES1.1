{% extends 'base_AdminDashboard.html.twig' %}


{% block body %}

<div class="flex flex-wrap -mx-2 ml-64 overflow-y-auto mb-10">

  {% block page_header %}
  <div class="container ml-8 mb-4 mt-5">
    <h1 class="text-4xl font-semibold text-blue-600">List of Students</h1>
    <p class="text-sm text-gray-600">This is the list of all students that are registered.</p>
  </div>
  {% endblock %}
  <div class="flex flex-wrap gap-4 ml-8">
    {% for student in students %}
    <div class="w-96 h-64 max-w-sm rounded overflow-hidden shadow-lg bg-white p-4">
      <div class="px-6 py-6">
        <h5 class="font-bold text-xl mb-2 overflow-hidden overflow-ellipsis whitespace-nowrap">{{ student.name }}</h5>
        <h6 class="text-gray-600 text-base mb-2 overflow-hidden overflow-ellipsis whitespace-nowrap">studentID: {{ student.studentID }}</h6>
        <p class="text-gray-700 text-base overflow-hidden overflow-ellipsis whitespace-nowrap">Field: {{ student.field }}</p>
        <p class="text-gray-700 text-base overflow-hidden overflow-ellipsis whitespace-nowrap">Level: {{ student.level }}</p>
        <div class="flex space-x-4">
          <a href="{{ path('add_student', {id: student.id}) }}" class="mt-8 block w-1/2 mx-auto rounded-md border border-orange-600 bg-orange px-3 py-2 text-center text-sm font-semibold text-orange-600 shadow-sm hover:bg-orange-500 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">Edit</a>

          <a href="{{ path('detail_student', {id: student.id}) }}" class="mt-8 block w-1/2 mx-auto rounded-md bg-blue-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">Detail</a>
        </div>
      </div>
    </div>
    {% endfor %}
</div>

</div>

{% if isPaginated %}
<div class="flex justify-center">
  <nav aria-label="Page navigation">
    <ul class="inline-flex -space-x-px mb-4">
      {% if page != 1 %}
      <li>
        <a href="{{ path('list_student', {page: page - 1, nbre: nbre}) }}"
          class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">Previous</a>
      </li>
      {% endif %}
      {% for i in range(1, nbPage) %}
      <li>
        <a href="{{ path('list_student', {page: i, nbre: nbre}) }}"
          class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">{{ i }}</a>
      </li>
      {% endfor %}
      {% if page != nbPage %}
      <li>
        <a href="{{ path('list_student', {page: page + 1, nbre: nbre}) }}"
          class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">Next</a>
      </li>
      {% endif %}
    </ul>
  </nav>
</div>
{% endif %}

{% endblock %}

{% block title %}
List of Students
{% endblock %}