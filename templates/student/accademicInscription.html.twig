{% extends 'base_login.html.twig' %}

{% block head %}
{% block title %}<title>Student Registration</title>{% endblock %}
{% endblock %}

{% block body %}
<div class="min-h-screen flex justify-center items-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full space-y-8 bg-white p-10 rounded-lg shadow-2xl">
    <div>
      <h1 class="text-4xl font-bold text-blue-600 text-center">Student Registration</h1>
      <p class="mt-2 text-center text-sm text-gray-600">This is where new students get registered.</p>
    </div>
    
    <form class="mt-8 space-y-6" method="post" id="registration-form" enctype="multipart/form-data">
      {{ form_start(form) }}
      
      <div class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8">
        <div>
          {{ form_label(form.name, 'Full Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div>
          {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div>
          {{ form_label(form.phoneNumber, 'Phone Number', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.phoneNumber, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div>
          {{ form_label(form.dateOfBirth, 'Date of Birth', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.dateOfBirth, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div class="sm:col-span-2">
          {{ form_label(form.placeOfBirth, 'Place of Birth', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.placeOfBirth, {'attr': {'class': 'p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div class="sm:col-span-2">
          {{ form_label(form.Certificate, 'Certificate Photo', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.Certificate, {'attr': {'class': 'mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100'}}) }}
        </div>

        <div class="sm:col-span-2">
          {{ form_label(form.photoBac, 'Diploma Photo', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.photoBac, {'attr': {'class': 'mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100'}}) }}
        </div>

        <div>
          {{ form_label(form.field, 'Field of Study', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.field, {'attr': {'class': 'p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>

        <div>
          {{ form_label(form.level, 'Study Level', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
          {{ form_widget(form.level, {'attr': {'class': 'p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
        </div>
      </div>

      <div class="mt-6 flex justify-end space-x-3">
        <button type="button" onclick="resetForm()" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          Cancel
        </button>
        {{ form_widget(form.submit, {'attr': {'class': 'px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500'}}) }}
      </div>

      {{ form_end(form) }}
    </form>
  </div>
</div>

<script>
  function resetForm() {
    document.getElementById('registration-form').reset();
  }
</script>
{% endblock %}