{# templates/import_excel.html.twig #}

{% extends 'base_AdminDashboard.html.twig' %}

{% block title %}Import Excel{% endblock %}

{% block body %}

<div class="bg-white flex justify-start items-start ml-64">

  <form class="bg-white rounded-lg px-8 py-8 mt-2 w-full" method="post" id="excel-form">
  {{ form_start(form) }}
    <div class="space-y-6">
      <!-- Profile Section -->
      <div class=" ">
      <h1 class="text-4xl font-semibold text-blue-600">Import Excel File</h1>
        <p class="text-sm text-gray-600 mb-4">This is where you import an excel file.</p>

    <div class="border-b border-gray-900/10 pb-12 w-full">

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-5">
          <label for="file" class="block text-sm font-medium leading-6 text-gray-900">Click below to choose the corresponding file </label>
          <div class="mt-2 w-64">
           {{ form_row(form.file, {'attr': {'class': 'block w-1/2 text-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500'}}) }}
          </div>
        </div>
      </div>
    </div>

     <div class="mt-6 flex justify-end">
      <button type="submit" class="mr-4 py-2 px-4 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" onclick="resetForm()">Cancel</button>
       <button type="submit" class="py-2 px-4 border border-transparent rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Submit</button>
    </div>
          <!-- Add more fields here -->
        </div>
      </div>
      <!-- Add more sections here -->
    </div>
   {{ form_end(form) }}
  </form>
</div>

<script>
  function resetForm() {
    document.getElementById('excel-form').reset();
  }
</script>

{% endblock %}