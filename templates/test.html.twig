    <style>
        #searchInput:focus {
            outline: none;
            box-shadow: none;
        }
        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
        }
        .submenu.active {
            max-height: 500px;
            transition: max-height 0.5s ease-in;
        }
        .submenu-item.hidden {
            display: none;
        }
        .menu-item.active, .submenu-item.active {
            background-color: rgba(255, 255, 255, 0.2);
        }
        .submenu-item {
            padding-left: 2.5rem;
        }
        
        /* Responsive Design */
        @media (max-width: 1024px) {
            #sidebarDiv {
                width: 20rem;
            }
            #toggleBtn {
                right: -1rem;
                top: 1rem;
            }
        }

        @media (max-width: 768px) {
            #sidebarDiv {
                width: 16rem;
                position: fixed;
                left: -16rem;
                z-index: 10;
                transition: left 0.3s ease;
            }
            #sidebarDiv.open {
                left: 0;
            }
            #contentDiv {
                margin-left: 0;
            }
            #toggleBtn {
                display: none;
            }
        }

        @media (max-width: 640px) {
            #searchContainer {
                margin-top: 1rem;
            }
        }

        /* Ensure the sidebar is fixed and the content scrolls independently */
        #sidebarDiv {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
        }

        #contentDiv {
            margin-left: 18rem; /* Adjust this value according to the width of your sidebar */
            width: calc(100% - 18rem); /* Adjust this value according to the width of your sidebar */
            overflow-y: auto;
            height: 100vh;
        }

        /* Ensure dropdowns do not push other elements */
        .submenu {
            position: relative;
        }
    </style>
</head>
