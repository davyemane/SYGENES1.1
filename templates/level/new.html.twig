{% extends 'base_login.html.twig' %}

{% block title %}
    <title>{{ (isNew ? 'create-level-title' : 'edit-level-title') | trans }}</title>
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-100 to-orange-100 dark:from-gray-800 dark:to-gray-900 py-12 px-4 sm:px-6 lg:px-8 transition-colors duration-300 flex items-center justify-center">
    <div class="w-full max-w-4xl">
        <div class="bg-white dark:bg-gray-800 shadow-2xl rounded-xl overflow-hidden">
            <div class="px-6 py-8 sm:px-10">
                <h1 class="text-3xl font-extrabold text-primary dark:text-primary-light text-center mb-8">
                    {{ (isNew ? 'create-level' : 'edit-level') | trans }}
                </h1>

                <div class="flex justify-between items-center mb-8">
                    <a href="{{ path('role_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        {{ 'back' | trans }}
                    </a>
                    <button id="toggleExistingLevels" class="bg-secondary hover:bg-secondaryHover text-white font-semibold py-2 px-4 rounded-md transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-secondary focus:ring-opacity-50 shadow-md">
                        {{ 'toggle-existing-levels' | trans }}
                    </button>
                </div>

                <div id="existingLevelsContainer" class="mb-8 hidden">
                    <h2 class="text-2xl font-bold text-text dark:text-text-light mb-4">{{ 'existing-levels' | trans }}</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for existingLevel in existingLevels %}
                            <div class="bg-gradient-to-r from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 rounded-lg p-4 shadow-md hover:shadow-lg transition duration-300">
                                <h3 class="font-bold text-lg text-text dark:text-text-light mb-2">{{ existingLevel.name }}</h3>
                                <p class="text-sm text-gray-600 dark:text-gray-300">
                                    {{ 'fields' | trans }}:
                                    {% if existingLevel.fields|length > 0 %}
                                        {{ existingLevel.fields|map(field => field.name)|join(', ') }}
                                    {% else %}
                                        {{ 'not-assigned' | trans }}
                                    {% endif %}
                                </p>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="space-y-6">
                        <div>
                            {{ form_label(form.name, 'level-name' | trans, {'label_attr': {'class': 'block text-sm font-semibold text-text dark:text-text-light mb-2'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-secondary focus:ring focus:ring-secondary focus:ring-opacity-50 transition bg-white dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4'}}) }}
                            {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>

                        <div>
                            {{ form_label(form.fields, 'associated-field' | trans, {'label_attr': {'class': 'block text-sm font-semibold text-text dark:text-text-light mb-2'}}) }}
                            {{ form_widget(form.fields, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-secondary focus:ring focus:ring-secondary focus:ring-opacity-50 transition bg-white dark:bg-gray-700 text-gray-900 dark:text-white py-3 px-4'}}) }}
                            {{ form_errors(form.fields, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                    </div>

                    <div class="pt-8 flex justify-between items-center">
                        <a href="{{ path('role_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                            {{ 'back' | trans }}
                        </a>
                        <div class="flex space-x-4">
                            <a href="{{ path('app_register') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-secondary hover:bg-secondaryHover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary transition duration-300">
                                {{ 'next' | trans }}
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                </svg>
                            </a>
                            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primaryHover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition duration-300">
                                {{ (isNew ? 'create' : 'update') | trans }}
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('toggleExistingLevels').addEventListener('click', function() {
        var container = document.getElementById('existingLevelsContainer');
        container.classList.toggle('hidden');
    });
</script>
{% endblock %}