{% extends 'base_login.html.twig' %}

{% block title %}
    <title>{{ isNew ? 'Nouveau Niveau' : 'Modifier Niveau' | trans }}</title>
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-100 to-orange-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <div class="px-6 py-8 sm:px-10">
                <div class="flex justify-between items-center mb-8">
                    <h1 class="text-3xl font-extrabold text-gray-900">
                        {{ isNew ? 'Créer un nouveau niveau' : 'Modifier le niveau' | trans }}
                    </h1>
                    <button id="toggleExistingLevels" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                        {{ 'Afficher/Masquer les niveaux existants' | trans }}
                    </button>
                </div>

                <div id="existingLevelsContainer" class="mb-8 hidden">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">{{ 'Niveaux existants' | trans }}</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for existingLevel in existingLevels %}
                            <div class="bg-gradient-to-r from-orange-100 to-orange-200 rounded-lg p-4 shadow-md hover:shadow-lg transition duration-300">
                                <h3 class="font-bold text-lg text-gray-800 mb-2">{{ existingLevel.name }}</h3>
                                <p class="text-sm text-gray-600">
                                    {{ 'Filières:' | trans }}
                                    {% if existingLevel.fields|length > 0 %}
                                        {{ existingLevel.fields|map(field => field.name)|join(', ') }}
                                    {% else %}
                                        {{ 'Non assignées' | trans }}
                                    {% endif %}
                                </p>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="space-y-6">
                        <div>
                            {{ form_label(form.name, 'Nom du niveau' | trans, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition'}}) }}
                            {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>

                        <div>
                            {{ form_label(form.fields, 'Champ associé' | trans, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.fields, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition'}}) }}
                            {{ form_errors(form.fields, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                    </div>

                    <div class="pt-6">
                        <button type="submit" class="w-full inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition duration-300 ease-in-out transform hover:scale-105">
                            {{ (isNew ? 'Créer' : 'Modifier') | trans }}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('toggleExistingLevels').addEventListener('click', function() {
        var container = document.getElementById('existingLevelsContainer');
        container.classList.toggle('hidden');
    });
</script>
{% endblock %}